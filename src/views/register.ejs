<%- include ('partials/_header.ejs'); %>
<body class="register">
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand">Práctica de seguridad en bases de datos (SQL Injection)</a>
    </nav>
    <br>
    <div class="container">
        <div class="col-sm-6 mx-auto">
            <div class="card mt-5">
                <div class="card-body">
                    <!--Messages or Alerts-->
                    <h1 class="text-center"><span class="fa fa-user-plus"></span> Registrarse</h1>
                    <!--bloque de codigo de alerta-->
                    <% if(message.length>0){ %>
                        <div class="alert alert-danger"><%= message %>
                            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                            
                        </div>
                    <% } %>
                    <!--form-->
                    <form action="/register" method="post">
                        <div class="form-group">
                            <label for="name">Nombres</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">Correo</label>
                            <input type="email" name="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">Contraseña</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                        <input type="submit" class="btn btn-dark btnl-lg" value="Registrar">
                    </form>
                    <hr>
                    <div class="text-center">
                        <p>¿Ya tienes una cuenta? <a href="/login">Incia sesión</a></p>
                        <p>Volver a <a href="/">Inicio</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include ('partials/_footer.ejs'); %>